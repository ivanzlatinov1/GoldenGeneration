@model GoldenGeneration.Web.Models.Footballers.FootballerFormModel
<h1 class="m-auto mt-3 text-center" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Create Footballer</h1>
<form asp-action="Create" method="post" class="mt-4 bg-dark text-light p-4 rounded">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="FirstName" class="form-label text-light"></label>
            <input class="form-control bg-secondary text-light" asp-for="FirstName" />
            <span class="small text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="LastName" class="form-label text-light"></label>
            <input class="form-control bg-secondary text-light" asp-for="LastName" />
            <span class="small text-danger" asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Age" class="form-label text-light"></label>
            <input class="form-control bg-secondary text-light" asp-for="Age" />
            <span class="small text-danger" asp-validation-for="Age"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Nationality" class="form-label text-light"></label>
            <input class="form-control bg-secondary text-light" asp-for="Nationality" />
            <span class="small text-danger" asp-validation-for="Nationality"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="ShirtNumber" class="form-label text-light"></label>
            <input class="form-control bg-secondary text-light" asp-for="ShirtNumber" />
            <span class="small text-danger" asp-validation-for="ShirtNumber"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ClubId" class="form-label text-light"></label>
            <select class="form-select bg-secondary text-light" asp-for="ClubId">
                <option value="@string.Empty">Choose player's club</option>
                @foreach (var club in Model.Clubs)
                {
                    <option value="@club.Id">@club.Name</option>
                }
            </select>
            <span class="small text-danger" asp-validation-for="ClubId"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="PositionId" class="form-label text-light"></label>
            <select class="form-select bg-secondary text-light" asp-for="PositionId">
                <option value="0">Choose player's position</option>
                @foreach (var position in Model.Positions)
                {
                    <option value="@position.Id">@position.Name</option>
                }
            </select>
            <span class="small text-danger" asp-validation-for="PositionId"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ImageUrl" class="form-label text-light"></label>
            <input class="form-control bg-secondary text-light" asp-for="ImageUrl" />
            <span class="small text-danger" asp-validation-for="ImageUrl"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="TransferPrice" class="form-label text-light"></label>
            <input class="form-control bg-secondary text-light" asp-for="TransferPrice" />
            <span class="small text-danger" asp-validation-for="TransferPrice"></span>
        </div>
        <div class="col-md-6 form-check text-light">
            <label class="form-check-label text-light" asp-for="Retired"></label>
            <input class="form-check-input" asp-for="Retired" />
            <span class="small text-danger" asp-validation-for="Retired"></span>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <button class="btn btn-primary btn-lg" type="submit">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
