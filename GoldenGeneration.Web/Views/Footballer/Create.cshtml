@model GoldenGeneration.Web.Models.Footballers.FootballerFormModel
<form asp-action="Create" method="post">
    <div>
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" />
        <span class="small text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" />
        <span class="small text-danger" asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span class="small text-danger" asp-validation-for="Age"></span>
    </div>
    <div>
        <label asp-for="Nationality"></label>
        <input class="form-control" asp-for="Nationality" />
        <span class="small text-danger" asp-validation-for="Nationality"></span>
    </div>
    <div>
        <label asp-for="ShirtNumber"></label>
        <input class="form-control" asp-for="ShirtNumber" />
        <span class="small text-danger" asp-validation-for="ShirtNumber"></span>
    </div>
    <div>
        <label asp-for="ClubId"></label>
        <select class="form-select" asp-for="ClubId">
            <option value="@string.Empty">Choose player's club</option>
            @foreach (var club in Model.Clubs)
            {
                <option value="@club.Id">@club.Name</option>
            }
        </select>
        <span class="small text-danger" asp-validation-for="ClubId"></span>
    </div>
    <div>
        <label asp-for="PositionId"></label>
        <select class="form-select" asp-for="PositionId">
            <option value="0">Choose player's position</option>
            @foreach (var position in Model.Positions)
            {
                <option value="@position.Id">@position.Name</option>
            }
        </select>
        <span class="small text-danger" asp-validation-for="PositionId"></span>
    </div>
    <div>
        <label asp-for="TransferPrice"></label>
        <input class="form-control" asp-for="TransferPrice" />
        <span class="small text-danger" asp-validation-for="TransferPrice"></span>
    </div>
    <div class="form-check mt-2">
        <label class="form-check-label" asp-for="Retired"></label>
        <input class="form-check-input" asp-for="Retired" />
        <span class="small text-danger" asp-validation-for="Retired"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary btn-lg m-auto" type="submit">Create</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}