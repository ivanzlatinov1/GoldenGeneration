@{
    ViewData["Title"] = "Home Page";
}

<section class="main">
    <h1 class="shadow-lg p-3 mb-3 text-white rounded shadow-text">Golden Generation</h1>
    <h2 class="shadow p-3 text-light rounded shadow-text">Be part of the world's football</h2>
    <div class="buttons">
        <a asp-controller="Footballer" asp-action="Index" class="btn btn-primary btn-modern">
            <span>Explore Footballers</span>
        </a>
        <a asp-controller="Club" asp-action="Index" class="btn btn-primary btn-modern">
            <span>Explore Clubs</span>
        </a>
    </div>
</section>

<div class="polygon">
    <div class="hero"></div>
</div>

<style>
        .buttons {
            display: flex;
            gap: 20px;
        }

        .btn-modern {
            position: relative;
            overflow: hidden;
            font-size: 18px;
            font-weight: bold;
            padding: 12px 24px;
            margin-left: 15px;
            border-radius: 8px;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s;
        }

        .btn-modern::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 300%;
            height: 300%;
            background: rgba(255, 255, 255, 0.2);
            transition: width 0.4s ease-in-out, height 0.4s ease-in-out, top 0.4s ease-in-out, left 0.4s ease-in-out;
            border-radius: 50%;
            transform: translate(-50%, -50%);
            z-index: 0;
        }

        .btn-modern:hover::before {
            width: 0%;
            height: 0%;
            top: 0;
            left: 0;
            border-radius: 0;
        }

        .btn-modern:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

        .btn-modern span {
            position: relative;
            z-index: 1;
        }
</style>